<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <EditText
        android:id="@+id/etRegno"
        android:layout_width="315sp"
        android:layout_height="45sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Registration Number"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="315sp"
        android:layout_height="45sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etname" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="315sp"
        android:layout_height="45sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="134sp"
        android:layout_height="40sp"
        android:background="@drawable/button"
        android:fontFamily="@font/medium"
        android:text="Register"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etdash" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/light"
        android:text="Already registered?"
        android:textColor="@color/blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        app:layout_constraintVertical_bias="0.901" />

    <TextView
        android:id="@+id/tvSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="@font/medium"
        android:text="Sign in."
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        app:layout_constraintVertical_bias="0.901" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="REGISTRATION!"
        android:textColor="@color/blue"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <EditText
        android:id="@+id/etDept"
        android:layout_width="315sp"
        android:layout_height="45sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Department"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhone" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="315sp"
        android:layout_height="45sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint=" Phone Number"
        android:inputType="number"
        android:textColor="@color/blue"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegno" />

    <EditText
        android:id="@+id/etname"
        android:layout_width="315sp"
        android:layout_height="45sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint=" Full Name"
        android:inputType="textPersonName"
        android:textColor="@color/blue"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="174dp"
        android:layout_height="134dp"
        android:src="@drawable/img1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etdash"
        android:layout_width="315sp"
        android:layout_height="45sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Enter Your Reg_No Replace / with -(dash) "
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDept" />

</androidx.constraintlayout.widget.ConstraintLayout>